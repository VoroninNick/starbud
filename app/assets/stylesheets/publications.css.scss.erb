.publications-wrapper {
  background: white;
  padding-bottom: 100px;
  margin-top: -85px;
  position: relative;
}
.publication-sidebar li {
  list-style: none;
  padding: 1px 0 1px 0;
}
.publication-sidebar li a {
  padding: 8px 0 8px 30px;
  display: block;
  background: #ebebeb;
  font-size: 20px;
  color: #004684;
  font-weight: 200;
}
.publication-sidebar li a:hover {
  background: url("<%= asset_path('about_us_sidebar_link_hover_background_pattern.jpg') %>")!important;
  color: white !important;
}
.columns.large-9.publications p {
    min-height: 1000px;
}
.slides-container {
    height: 400px!Important;
}
.publication-slider-wrapper {
    margin-left: -29px;
    width: 106%;
    background: #c5c5c5;
    height: 450px;
    position: relative;
}
.publication-slider-content {
    width: 30%;
    background: #014785;
    height: 100%;
    float: right;
    position: relative;
    right: 20%;
}
.publication-slider-content-inner {
    width: 72%;
    margin: 25px;
}
.publication-slider-content-inner h3, .publication-slider-content-inner p {color: white;}
.publication-slider-content-read-more a img {
    width: 45px!important;
    height: 45px!important;
}
#helpful_articles_slider {
    width: 94%!important;
    margin: 0 auto;
    height: 400px!important;
    padding-top: 25px;
}
